{
    "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.15.0/.schema/devbox.schema.json",
    "packages": ["ruby@3.4.5", "bundler@2.7.2", "nodejs@24"],
    "shell": {
      "init_hook": [
        "echo Books Shell"
      ],
      "scripts": {
        "test": [
          "rspec spec"
        ],
        "install": [
          "bundle install",
          "cd client-app; npm install"
        ],
        "db_setup": [
          "rails db:create; rails db:migrate"
        ]
      }
    }
  }
  